<%- include("header") -%>

    <h1>Add WishList!</h1>
    <form class="" action="/profile_wishList_add" method="post">

      <label for="">Product name : </label>
        <input type="text" name="productName" value="<%= wishList.productName %>" placeholder="Product Name" required>
        <br />
        <label for="">Description : </label>
        <input type="text" name="description" value="<%= wishList.description %>" required placeholder="Description">
        <br />
        <label for="">Image Link : </label>
        <input type="text" name="imageLink" value="<%= wishList.imageLink %>"   placeholder="image Link">
        <br />
        <label for="">Purchase Link : </label>
        <input type="text" name="purchaseLink" value="<%= wishList.purchaseLink %>"  placeholder="Purchase Link">


      <button type="submit" name="submit" value="<%= wishList.username %>">Submit</button>

    </form>
    <br />
    <button><a href="/profile">back</a></button>

<%- include("footer") -%>
