<%- include("header") -%>

<h1> <span class="user">Wish List | </span> <%= name %>  </h1>

<form class="wide" action="/profile_wishList" method="post">
  <button type="submit" name="add" value=1 >add</button>

  <%  for(let i=0; i<userWishList.length; i++){  %>
  <div class="">

      <h3 class="red"><%= userWishList[i].productName %></h3>
      <button class="blue" type="submit" name="edit" value= <%= userWishList[i]._id %> >edit</button>
      <button class="blue" type="submit" name="delete" value= <%= userWishList[i]._id %> >delete</button>
      <br />
      <p class="blueText"><%= userWishList[i].description %></p>

      <p><a href="<%= userWishList[i].purchaseLink %>">Purchase Link</a> </p>
      <img src="<%= userWishList[i].imageLink %>" alt="">

      <% if(i != userWishList.length-1) { %>
        <hr class="line" />
      <%   }   %>


  </div>
  <%  }  %>

</form>

<button><a class="bold" href="/profile">back</a></button>




